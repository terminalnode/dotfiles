set $left h
set $down j
set $up k
set $right l
set $mod Mod4

# Useful hotkeys
bindsym $mod+x          kill                            # Svorak q
bindsym $mod+y          fullscreen                      # Svorak f
bindsym $mod+Shift+c    reload                          # Default
bindsym $mod+v          split toggle                    # Default
bindsym $mod+k          layout toggle tabbed split      # Svorak t

input "*" {
    # Keyboards
    xkb_layout se
    # xkb_variant dvorak_a5
    xkb_options caps:swapescape,compose:sclk
    
    # Pointers
    dwt                 disabled
    tap                 enabled
    natural_scroll      enabled
    middle_emulation    enabled
    tap_button_map      lrm
    scroll_method       two_finger
    scroll_factor       0.5
}

# Exception: Bluetooth keyboard is too small to touch type on.
# Will therefor be using the layout printed onto the keys.
input "2652:34050:Bluetooth_keyboard_Keyboard" {
    xkb_layout se
    xkb_variant ,nodeadkeys
}

############################
### CONTAINER NAVIGATION ###
####################################
### Navigation within workspaces ###
####################################
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

######################################
### Move windows within workspaces ###
######################################
bindsym $mod+Shift+$left    move left
bindsym $mod+Shift+$down    move down
bindsym $mod+Shift+$up      move up
bindsym $mod+Shift+$right   move right

bindsym $mod+Shift+Left     move left
bindsym $mod+Shift+Down     move down
bindsym $mod+Shift+Up       move up
bindsym $mod+Shift+Right    move right

###################################
### Navigate between workspaces ###
###################################
bindsym $mod+a          workspace 1
bindsym $mod+s          workspace 2
bindsym $mod+d          workspace 3
bindsym $mod+f          workspace 4
bindsym $mod+g          workspace 5
bindsym $mod+q          workspace 6
bindsym $mod+w          workspace 7
bindsym $mod+e          workspace 8
bindsym $mod+r          workspace 9
bindsym $mod+t          workspace 10

##############################
### Move containers around ###
##############################
# Moving a container to a specific workspace will also
# move the focus to that workspace, since I find that's
# usually what I want to do.
bindsym $mod+Shift+a            move container to workspace 1,  workspace 1
bindsym $mod+Shift+s            move container to workspace 2,  workspace 2
bindsym $mod+Shift+d            move container to workspace 3,  workspace 3
bindsym $mod+Shift+f            move container to workspace 4,  workspace 4
bindsym $mod+Shift+g            move container to workspace 5,  workspace 5
bindsym $mod+Shift+q            move container to workspace 6,  workspace 6
bindsym $mod+Shift+w            move container to workspace 7,  workspace 7
bindsym $mod+Shift+e            move container to workspace 8,  workspace 8
bindsym $mod+Shift+r            move container to workspace 9,  workspace 9
bindsym $mod+Shift+t            move container to workspace 10, workspace 10

###################
### RESIZE MODE ###
###################
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left           resize shrink width  10 px or 10 ppt
    bindsym $down           resize grow   height 10 px or 10 ppt
    bindsym $up             resize shrink height 10 px or 10 ppt
    bindsym $right          resize grow   width  10 px or 10 ppt

    bindsym $mod+$left      resize shrink width  10 px or 10 ppt
    bindsym $mod+$down      resize grow   height 10 px or 10 ppt
    bindsym $mod+$up        resize shrink height 10 px or 10 ppt
    bindsym $mod+$right     resize grow   width  10 px or 10 ppt

    bindsym shift+$left     resize shrink width  10 px or 10 ppt
    bindsym shift+$down     resize grow   height 10 px or 10 ppt
    bindsym shift+$up       resize shrink height 10 px or 10 ppt
    bindsym shift+$right    resize grow   width  10 px or 10 ppt

    # ditto, with arrow keys
    bindsym Left            resize shrink width  10 px or 10 ppt
    bindsym Down            resize grow   height 10 px or 10 ppt
    bindsym Up              resize shrink height 10 px or 10 ppt
    bindsym Right           resize grow   width  10 px or 10 ppt

    bindsym $mod+Left       resize shrink width  10 px or 10 ppt
    bindsym $mod+Down       resize grow   height 10 px or 10 ppt
    bindsym $mod+Up         resize shrink height 10 px or 10 ppt
    bindsym $mod+Right      resize grow   width  10 px or 10 ppt

    bindsym shift+Left      resize shrink width  10 px or 10 ppt
    bindsym shift+Down      resize grow   height 10 px or 10 ppt
    bindsym shift+Up        resize shrink height 10 px or 10 ppt
    bindsym shift+Right     resize grow   width  10 px or 10 ppt

    # return to default mode
    bindsym Return  mode "default"
    bindsym Escape  mode "default"
    bindsym $mod+o  mode "default"
    bindsym o       mode "default"
}
bindsym $mod+o mode "resize" # Svorak r

