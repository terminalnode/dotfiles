set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# Resize value.
set $num 5

# Useful hotkeys
bindsym $mod+q          kill
bindsym $mod+f          fullscreen
bindsym $mod+Shift+c    reload
bindsym $mod+v          split toggle
bindsym $mod+t          layout toggle tabbed split

input "*" {
    xkb_layout se(dvorak_a5),se
    xkb_options caps:swapescape,compose:rctrl,grp:alt_caps_toggle
}

# Exception: Bluetooth keyboard is too small to touch type on.
# Will therefor be using the layout printed onto the keys.
input "2652:34050:Bluetooth_keyboard_Keyboard" {
    xkb_layout se
    xkb_variant ,nodeadkeys
}

############################
### CONTAINER NAVIGATION ###
####################################
### Navigation within workspaces ###
####################################
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

######################################
### Move windows within workspaces ###
######################################
bindsym $mod+Shift+$left    move left
bindsym $mod+Shift+$down    move down
bindsym $mod+Shift+$up      move up
bindsym $mod+Shift+$right   move right

bindsym $mod+Shift+Left     move left
bindsym $mod+Shift+Down     move down
bindsym $mod+Shift+Up       move up
bindsym $mod+Shift+Right    move right

###################################
### Navigate between workspaces ###
###################################
bindsym $mod+a          workspace 1
bindsym $mod+o          workspace 2
bindsym $mod+e          workspace 3
bindsym $mod+u          workspace 4
bindsym $mod+i          workspace 5
bindsym $mod+aring      workspace 6
bindsym $mod+adiaeresis workspace 7
bindsym $mod+odiaeresis workspace 8
bindsym $mod+p          workspace 9
bindsym $mod+y          workspace 10

##############################
### Move containers around ###
##############################
# Moving a container to a specific workspace will also
# move the focus to that workspace, since I find that's
# usually what I want to do.
bindsym $mod+Shift+a            move container to workspace 1,  workspace 1
bindsym $mod+Shift+o            move container to workspace 2,  workspace 2
bindsym $mod+Shift+e            move container to workspace 3,  workspace 3
bindsym $mod+Shift+u            move container to workspace 4,  workspace 4
bindsym $mod+Shift+i            move container to workspace 5,  workspace 5
bindsym $mod+Shift+aring        move container to workspace 6,  workspace 6
bindsym $mod+Shift+adiaeresis   move container to workspace 7,  workspace 7
bindsym $mod+Shift+odiaeresis   move container to workspace 8,  workspace 8
bindsym $mod+Shift+p            move container to workspace 9,  workspace 9
bindsym $mod+Shift+y            move container to workspace 10, workspace 10

###################
### RESIZE MODE ###
###################
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left           resize shrink width  $num px or $num ppt
    bindsym $down           resize grow   height $num px or $num ppt
    bindsym $up             resize shrink height $num px or $num ppt
    bindsym $right          resize grow   width  $num px or $num ppt

    bindsym $mod+$left      resize shrink width  $num px or $num ppt
    bindsym $mod+$down      resize grow   height $num px or $num ppt
    bindsym $mod+$up        resize shrink height $num px or $num ppt
    bindsym $mod+$right     resize grow   width  $num px or $num ppt

    bindsym shift+$left     resize shrink width  $num px or $num ppt
    bindsym shift+$down     resize grow   height $num px or $num ppt
    bindsym shift+$up       resize shrink height $num px or $num ppt
    bindsym shift+$right    resize grow   width  $num px or $num ppt

    # ditto, with arrow keys
    bindsym Left            resize shrink width  $num px or $num ppt
    bindsym Down            resize grow   height $num px or $num ppt
    bindsym Up              resize shrink height $num px or $num ppt
    bindsym Right           resize grow   width  $num px or $num ppt

    bindsym $mod+Left       resize shrink width  $num px or $num ppt
    bindsym $mod+Down       resize grow   height $num px or $num ppt
    bindsym $mod+Up         resize shrink height $num px or $num ppt
    bindsym $mod+Right      resize grow   width  $num px or $num ppt

    bindsym shift+Left      resize shrink width  $num px or $num ppt
    bindsym shift+Down      resize grow   height $num px or $num ppt
    bindsym shift+Up        resize shrink height $num px or $num ppt
    bindsym shift+Right     resize grow   width  $num px or $num ppt

    # return to default mode
    bindsym Return  mode "default"
    bindsym Escape  mode "default"
    bindsym $mod+r  mode "default"
    bindsym r       mode "default"
}
bindsym $mod+r mode "resize"

