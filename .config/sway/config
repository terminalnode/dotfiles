    colors {
        statusline #ffffff
        background #122224cc
        inactive_workspace	#234145cc #234145cc #212121
		active_workspace	#77dae8cc #21616a #212121
		focused_workspace	#77dae8cc #21616a #212121
		# urgent workspace
		# binding mode

    }
}

