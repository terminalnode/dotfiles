# Apparently variable names in workspace configuration is working now. <3
set $laptop    'eDP-1'
# set $homeLeft  'Acer Technologies KA242Y 0x0000D512'
set $homeLeft  'Acer Technologies KA242Y 0x0111C412'
set $homeRight 'Acer Technologies KA242Y TJHEE0013E00'
set $workWide  'Philips Consumer Electronics Company PHL 346B1C 0x0000A2CA'
set $lianExt   'LG Electronics LG ULTRAFINE 202NTUWGZ526'
set $chrisExt  'Samsung Electric Company LF32TU87 HNMT100025'
set $chrisExtW 'AOC Q32G1WG4 0x00002572'
set $chrisDellUsb 'Dell Inc. DELL U2723QE 5WVDBH3'

output $laptop {
  pos 1920 0
  #pos 0 1080
  scale 1
  mode 1920x1080@60Hz
}

output $workWide {
  pos 3840 0
  scale 1
  mode 1920x1200@60Hz
}

output $homeLeft {
  pos 3840 0
  scale 1
  mode 1920x1080@74.973Hz
}

output $homeRight {
  pos 5760 0
  scale 1
  mode 1920x1080@74.973Hz
}

output $lianExt {
  pos 3840 0
  scale 2
  mode 3840x2160@60.000Hz
}

output $chrisExt {
  pos 3840 0
  scale 2
  mode 3840x2160@60.000Hz
}

output $chrisExtW {
  pos 3840 0
  scale 1
  mode 2560x1440@59.951Hz
}

output $chrisDellUsb {
  pos 0 0
  scale 2
  mode 3840x2160@60Hz
}

# Workspace
# Home setup:   5 left, 5 right, 5 left, 5 right
# Work setup 1: 5 laptop, 5 wide, 5 laptop, 5 wide
# Work setup 2: 20 wide
# Fallback:     20 laptop
workspace 1   output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 2   output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 3   output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 4   output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 5   output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 6   output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 7   output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 8   output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 9   output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 10  output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 11  output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 12  output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 13  output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 14  output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 15  output $laptop  $homeLeft  $workWide $lianExt $chrisExt $chrisExtW $chrisDellUsb
workspace 16  output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 17  output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 18  output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 19  output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
workspace 20  output $chrisDellUsb $chrisExt $chrisExtW $lianExt $homeRight $workWide $laptop
