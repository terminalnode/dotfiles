# Apparently variable names in workspace configuration is working now. <3
set $laptop    'eDP-1'
set $homeLeft  'Acer Technologies KA242Y 0x0000D512'
set $homeRight 'Acer Technologies KA242Y TJHEE0013E00'
set $workWide  'Philips Consumer Electronics Company PHL 346B1C 0x0000A2CA'

output $laptop {
    pos 1920 0
    scale 1
    mode 1920x1080@60Hz
}

output $workWide {
  pos 3840 0
  scale 1
  mode 3440x1440@100Hz
}

output $workWide {
  pos 3840 0
  scale 1
  mode 1920x1200@60Hz
}

output $homeLeft {
  pos 3840 0
  scale 1
  mode 1920x1080@74.973000Hz
}

output $homeRight {
  pos 5760 0
  scale 1
  mode 1920x1080@74.973000Hz
}

# Workspace
# Home setup: 5 left, 5 right, 5 left, 5 right
# Work setup: 5 laptop, 5 wide, 5 laptop, 5 wide
# Fallback:   20 laptop
workspace 1     output $laptop     $homeLeft
workspace 2     output $laptop     $homeLeft
workspace 3     output $laptop     $homeLeft
workspace 4     output $laptop     $homeLeft
workspace 5     output $laptop     $homeLeft
workspace 6     output $homeRight  $workWide  $laptop
workspace 7     output $homeRight  $workWide  $laptop
workspace 8     output $homeRight  $workWide  $laptop
workspace 9     output $homeRight  $workWide  $laptop
workspace 10    output $homeRight  $workWide  $laptop
workspace 11    output $laptop     $homeLeft
workspace 12    output $laptop     $homeLeft
workspace 13    output $laptop     $homeLeft
workspace 14    output $laptop     $homeLeft
workspace 15    output $laptop     $homeLeft
workspace 16    output $homeRight  $workWide  $laptop
workspace 17    output $homeRight  $workWide  $laptop
workspace 18    output $homeRight  $workWide  $laptop
workspace 19    output $homeRight  $workWide  $laptop
workspace 20    output $homeRight  $workWide  $laptop
